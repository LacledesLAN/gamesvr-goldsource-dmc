{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "docker pull lacledeslan/gamesvr-goldsource; docker build . -f Dockerfile.linux -t lltest/gamesvr-goldsource-dmc --no-cache --build-arg BUILDNODE=$env:computername;",
            "group": "build",
            "identifier": "build-image",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Execute Self Tests",
            "type": "shell",
            "command": "docker run -it --rm lltest/gamesvr-goldsource-dmc ./ll-tests/gamesvr-goldsource-dmc.sh;",
            "dependsOn": "build-image",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "command": "docker run -it --net=host lltest/gamesvr-goldsource-dmc ./hlds_run +sv_lan 1 -game dmc +map dcdm5 +maxplayers 16;",
            "dependsOn": "build-image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it --net=host --rm lltest/gamesvr-goldsource-dmc;",
            "dependsOn": "build-image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Download git submodules",
            "type": "shell",
            "command": "git submodule foreach git pull origin master;",
            "identifier": "download-sub-modules",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Update git submodules",
            "type": "shell",
            "command": "git submodule update --recursive --remote;",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}
